<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RotaryKnob">

        <!--Circle-->
        <attr name="circle_style" format="enum">
            <enum name="solid" value="0" />
            <enum name="gradient" value="1" />
        </attr>
        <attr name="circle_color" format="color" />
        <attr name="circle_gradient_center_color" format="color" />
        <attr name="circle_gradient_outer_color" format="color" />

        <!--Border-->
        <attr name="show_border" format="boolean" />
        <attr name="border_color" format="color" />
        <attr name="border_width" format="dimension" />

        <!--Progress Normal-->
        <attr name="progress_style" format="enum">
            <enum name="circle" value="0" />
            <enum name="line" value="1" />
        </attr>
        <attr name="progress_color" format="color" />
        <attr name="show_big_progress" format="boolean" />
        <attr name="big_progress_multiplier" format="float" />
        <attr name="big_progress_diff" format="integer" />

        <!--Progress Filled-->
        <attr name="progress_filled_color" format="color" />
        <attr name="progress_filled_multiplier" format="float" />

        <!--Indicator-->
        <attr name="indicator_style" format="enum">
            <enum name="circle" value="0" />
            <enum name="line" value="1" />
        </attr>
        <attr name="indicator_color" format="color" />
        <attr name="indicator_size" format="dimension" />

        <!--Progress Text-->
        <attr name="show_progress_text" format="boolean" />
        <attr name="progress_text" format="string" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="progress_text_font" format="reference" />

        <!--suffix Text-->
        <attr name="show_suffix_text" format="boolean" />
        <attr name="suffix_text" format="string" />
        <attr name="suffix_text_color" format="color" />
        <attr name="suffix_text_size" format="dimension" />
        <attr name="suffix_text_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="suffix_text_font" format="reference" />

        <!--Label-->
        <attr name="show_label" format="boolean" />
        <attr name="label_text" format="string" />
        <attr name="label_text_color" format="color" />
        <attr name="label_text_size" format="dimension" />
        <attr name="label_text_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>
        <attr name="label_text_font" format="reference" />
        <attr name="label_margin" format="dimension" />


        <!--Enabled-->
        <attr name="knob_enable" format="boolean" />
        <attr name="touch_to_enable" format="boolean" />
        <attr name="double_touch_to_enable" format="boolean" />
        <attr name="d_circle_color" format="color" />
        <attr name="d_circle_gradient_center_color" format="color" />
        <attr name="d_circle_gradient_outer_color" format="color" />
        <attr name="d_border_color" format="color" />
        <attr name="d_progress_color" format="color" />
        <attr name="d_big_progress_color" format="color" />
        <attr name="d_progress_filled_color" format="color" />
        <attr name="d_indicator_color" format="color" />
        <attr name="d_progress_text_color" format="color" />
        <attr name="d_suffix_text_color" format="color" />
        <attr name="d_label_text_color" format="color" />

        <!--Value-->
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="current_progress" format="integer" />

        <!-- Knob image -->
        <attr name="knob_image" format="reference" />
        <attr name="knob_image_rotation" format="boolean" />

    </declare-styleable>


</resources>